<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
<!--        <variable-->
<!--            name="villager"-->
<!--            type="com.ssafy.animal_crossing_nh_guide.models.villager.Villager" />-->
<!--        <variable-->
<!--            name="filepath"-->
<!--            type="String" />-->
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:id="@+id/btnStar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/selector_star" />
                <ImageView
                    android:id="@+id/btnCheck"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/selector_check" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/flipframe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </FrameLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/closeBtn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1dp"
                android:backgroundTint="@color/ac_primary"
                android:fontFamily="@font/cindi"
                android:text="CLOSE"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/cardView"
                app:layout_constraintStart_toStartOf="@+id/cardView"
                app:strokeWidth="0dp" />
        </LinearLayout>
    </FrameLayout>
</layout>