<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
<!--        <variable-->
<!--            name="villager"-->
<!--            type="com.ssafy.animal_crossing_nh_guide.models.villager.Villager" />-->
<!--        <variable-->
<!--            name="filepath"-->
<!--            type="String" />-->
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/flipbutton"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="425dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal" />

        <FrameLayout
            android:id="@+id/flipframe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginBottom="100dp"
            android:layout_weight="1">
        </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:gravity="top|center">
                <ImageView
                    android:id="@+id/btnStar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/selector_star" />
                <ImageView
                    android:id="@+id/btnCheck"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/selector_check" />
            </LinearLayout>

        <ImageView
            android:id="@+id/btnPrev"
            android:layout_width="30dp"
            android:layout_marginVertical="330dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="13dp"
            android:src="@drawable/prev"
            android:layout_gravity="left"
            app:tint="@color/ac_background_chosebox" />

        <ImageView
            android:id="@+id/btnNext"
            android:layout_width="30dp"
            android:layout_marginVertical="330dp"
            android:layout_height="match_parent"
            android:layout_marginRight="13dp"
            android:src="@drawable/next"
            android:layout_gravity="right"
            app:tint="@color/ac_background_chosebox" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/closeBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="50dp"
                android:layout_marginHorizontal="100dp"
                android:backgroundTint="@color/ac_primary"
                android:fontFamily="@font/cindi"
                android:text="CLOSE"
                app:cornerRadius="20dp"
                app:strokeWidth="0dp" />

    </FrameLayout>
</layout>