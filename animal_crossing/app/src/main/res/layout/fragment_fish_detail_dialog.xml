<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="fish"
            type="com.ssafy.animal_crossing_nh_guide.models.fish.Fish" />
        <variable
            name="monthList"
            type="java.util.ArrayList&lt;Boolean>" />
    </data>


    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btnBell"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginStart="190dp"
            android:layout_marginEnd="7dp"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/selector_bell"
            app:layout_constraintBottom_toTopOf="@+id/cardView"
            app:layout_constraintEnd_toStartOf="@+id/btnStar"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnStar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/selector_star"
            app:layout_constraintBottom_toBottomOf="@+id/btnCheck"
            app:layout_constraintEnd_toStartOf="@+id/btnCheck"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnBell" />

        <ImageView
            android:id="@+id/btnCheck"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/selector_check"
            app:layout_constraintBottom_toTopOf="@+id/cardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnStar"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="50dp"
            app:cardBackgroundColor="@color/ac_background_bright"
            app:cardCornerRadius="50dp"
            app:strokeWidth="0dp"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="50dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/detail_title_tv_background"
                    android:padding="5dp"
                    android:gravity="center"
                    tools:text="알렉산드리아제비나방"
                    android:text="@{fish.name.name_KRko}"
                    android:textSize="23sp"
                    app:layout_constraintBottom_toTopOf="@+id/materialCardView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="spread" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="40dp"
                    app:layout_constraintBottom_toTopOf="@+id/info"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/name"
                    app:strokeWidth="0dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageView"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:background="@color/cardview_light_background"
                        app:imageUrl="@{`images/fish/`+ fish.file_name + `.png`}"/>
                </com.google.android.material.card.MaterialCardView>


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/money"

                    app:layout_constraintStart_toEndOf="@+id/materialCardView"
                    app:layout_constraintTop_toTopOf="@+id/materialCardView" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@{Integer.toString(fish.price)}"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                    app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="@+id/imageView2" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvshadow"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/detail_tv_background"
                    android:gravity="center"
                    android:text="그림자"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/shadow"
                    app:layout_constraintStart_toStartOf="@+id/imageView2"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2" />

                <TextView
                    android:id="@+id/shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@{fish.shadow}"
                    android:textSize="17sp"
                    app:layout_constraintEnd_toEndOf="@+id/tvshadow"
                    app:layout_constraintStart_toStartOf="@+id/tvshadow"
                    app:layout_constraintTop_toBottomOf="@+id/tvshadow" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvlocation"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/detail_tv_background"
                    android:gravity="center"
                    android:text="위치"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/location"
                    app:layout_constraintStart_toStartOf="@+id/tvshadow"
                    app:layout_constraintTop_toBottomOf="@+id/shadow" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@{fish.availability.location}"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toTopOf="@+id/info"
                    app:layout_constraintEnd_toEndOf="@+id/tvlocation"
                    app:layout_constraintStart_toStartOf="@+id/tvlocation"
                    app:layout_constraintTop_toBottomOf="@+id/tvlocation" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/info"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/detail_tv_background"
                    android:gravity="center"
                    android:text="출현시기"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/materialCardView" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/info">

                    <Button
                        android:layout_gravity="center"
                        android:id="@+id/button2"
                        android:layout_width="85dp"
                        android:layout_height="40dp"
                        android:backgroundTint="@color/ac_button"
                        android:fontFamily="@font/cindi"
                        android:text="월"
                        android:clickable="false"
                        android:textSize="17sp"
                        app:layout_constraintBottom_toTopOf="@+id/button3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/materialCardView" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/linearLayout5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/m1"
                                android:textAlignment="center"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:gravity="center"
                                android:background="@{monthList[0] ? @drawable/month_checked : @drawable/month_unchecked}"
                                android:text="1"
                                android:textSize="17sp"
                                app:layout_constraintBottom_toTopOf="@id/m7"
                                app:layout_constraintEnd_toStartOf="@+id/m2"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:layout_conversion_absoluteHeight="19dp"
                                tools:layout_conversion_absoluteWidth="44dp"/>

                            <TextView
                                android:id="@+id/m2"
                                android:textAlignment="center"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:gravity="center"
                                android:background="@{monthList[1] ? @drawable/month_checked : @drawable/month_unchecked}"
                                android:text="2"
                                android:textSize="17sp"
                                app:layout_constraintBottom_toBottomOf="@+id/m1"
                                app:layout_constraintEnd_toStartOf="@+id/m3"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toEndOf="@+id/m1"
                                app:layout_constraintTop_toTopOf="@+id/m1"
                                tools:layout_conversion_absoluteHeight="19dp"
                                tools:layout_conversion_absoluteWidth="44dp" />

                            <TextView
                                android:id="@+id/m3"
                                android:textAlignment="center"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:gravity="center"
                                android:background="@{monthList[2] ? @drawable/month_checked : @drawable/month_unchecked}"
                                android:text="3"
                                android:textSize="17sp"
                                app:layout_constraintBottom_toBottomOf="@+id/m1"
                                app:layout_constraintEnd_toStartOf="@+id/m4"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toEndOf="@+id/m2"
                                app:layout_constraintTop_toTopOf="@+id/m1"
                                tools:layout_conversion_absoluteHeight="19dp"
                                tools:layout_conversion_absoluteWidth="44dp" />

                            <TextView
                                android:id="@+id/m4"
                                android:textAlignment="center"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:gravity="center"
                                android:background="@{monthList[3] ? @drawable/month_checked : @drawable/month_unchecked}"
                                android:text="4"
                                android:textSize="17sp"
                                app:layout_constraintBottom_toBottomOf="@+id/m1"
                                app:layout_constraintEnd_toStartOf="@+id/m5"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toEndOf="@+id/m3"
                                app:layout_constraintTop_toTopOf="@+id/m1"
                                tools:layout_conversion_absoluteHeight="19dp"
                                tools:layout_conversion_absoluteWidth="45dp" />

                            <TextView
                                android:id="@+id/m5"
                                android:textAlignment="center"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:gravity="center"
                                android:background="@{monthList[4] ? @drawable/month_checked : @drawable/month_unchecked}"
                                android:text="5"
                                android:textSize="17sp"
                                app:layout_constraintBottom_toBottomOf="@+id/m1"
                                app:layout_constraintEnd_toStartOf="@+id/m6"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toEndOf="@+id/m4"
                                app:layout_constraintTop_toTopOf="@+id/m1"
                                tools:layout_conversion_absoluteHeight="19dp"
                                tools:layout_conversion_absoluteWidth="45dp" />

                            <TextView
                                android:id="@+id/m6"
                                android:textAlignment="center"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:gravity="center"
                                android:background="@{monthList[5] ? @drawable/month_checked : @drawable/month_unchecked}"
                                android:text="6"
                                android:textSize="17sp"
                                app:layout_constraintBottom_toBottomOf="@+id/m1"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toEndOf="@+id/m5"
                                app:layout_constraintTop_toTopOf="@+id/m1"
                                tools:layout_conversion_absoluteHeight="19dp"
                                tools:layout_conversion_absoluteWidth="45dp" />

                            <TextView
                                android:id="@+id/m7"
                                android:layout_marginTop="2dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@{monthList[6] ? @drawable/month_checked : @drawable/month_unchecked}"
                                android:gravity="center"
                                android:text="7"
                                android:textAlignment="center"
                                android:textSize="17sp"
                                app:layout_constraintTop_toBottomOf="@id/m1"
                                app:layout_constraintEnd_toStartOf="@+id/m8"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:layout_conversion_absoluteHeight="19dp"
                                tools:layout_conversion_absoluteWidth="44dp" />

                            <TextView
                                android:id="@+id/m8"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@{monthList[7] ? @drawable/month_checked : @drawable/month_unchecked}"
                                android:gravity="center"
                                android:text="8"
                                android:textAlignment="center"
                                android:textSize="17sp"
                                app:layout_constraintTop_toTopOf="@id/m7"
                                app:layout_constraintEnd_toStartOf="@+id/m9"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toEndOf="@+id/m7"
                                tools:layout_conversion_absoluteHeight="19dp"
                                tools:layout_conversion_absoluteWidth="44dp" />

                            <TextView
                                android:id="@+id/m9"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@{monthList[8] ? @drawable/month_checked : @drawable/month_unchecked}"
                                android:gravity="center"
                                android:text="9"
                                android:textAlignment="center"
                                android:textSize="17sp"
                                app:layout_constraintTop_toTopOf="@id/m7"
                                app:layout_constraintEnd_toStartOf="@+id/m10"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toEndOf="@+id/m8"
                                tools:layout_conversion_absoluteHeight="19dp"
                                tools:layout_conversion_absoluteWidth="44dp" />

                            <TextView
                                android:id="@+id/m10"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@{monthList[9] ? @drawable/month_checked : @drawable/month_unchecked}"
                                android:gravity="center"
                                android:text="10"
                                android:textAlignment="center"
                                android:textSize="17sp"
                                app:layout_constraintTop_toTopOf="@id/m7"
                                app:layout_constraintEnd_toStartOf="@+id/m11"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toEndOf="@+id/m9"
                                tools:layout_conversion_absoluteHeight="19dp"
                                tools:layout_conversion_absoluteWidth="45dp" />

                            <TextView
                                android:id="@+id/m11"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@{monthList[10] ? @drawable/month_checked : @drawable/month_unchecked}"
                                android:gravity="center"
                                android:text="11"
                                android:textAlignment="center"
                                android:textSize="17sp"
                                app:layout_constraintTop_toTopOf="@id/m7"
                                app:layout_constraintEnd_toStartOf="@+id/m12"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toEndOf="@+id/m10"
                                tools:layout_conversion_absoluteHeight="19dp"
                                tools:layout_conversion_absoluteWidth="45dp" />

                            <TextView
                                android:id="@+id/m12"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@{monthList[11] ? @drawable/month_checked : @drawable/month_unchecked}"
                                android:gravity="center"
                                android:text="12"
                                android:textAlignment="center"
                                android:textSize="17sp"
                                app:layout_constraintTop_toTopOf="@id/m7"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toEndOf="@+id/m11"
                                tools:layout_conversion_absoluteHeight="19dp"
                                tools:layout_conversion_absoluteWidth="45dp" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/closeBtn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="85dp"
                        android:layout_height="40dp"
                        android:backgroundTint="@color/ac_button"
                        android:fontFamily="@font/cindi"
                        android:text="시간"
                        android:clickable="false"
                        android:textSize="17sp"
                        app:layout_constraintBottom_toTopOf="@+id/closeBtn"
                        app:layout_constraintStart_toStartOf="@+id/button2"
                        app:layout_constraintTop_toBottomOf="@+id/button2" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_gravity="center"
                        android:text="@{fish.availability.time}"
                        android:textSize="17sp"
                        app:layout_constraintBottom_toBottomOf="@+id/button3"
                        app:layout_constraintStart_toStartOf="@+id/m1"
                        app:layout_constraintTop_toTopOf="@+id/button3" />

                </LinearLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/closeBtn"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/ac_primary"
                    android:fontFamily="@font/cindi"
                    android:text="CLOSE"
                    app:cornerRadius="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                    app:strokeWidth="0dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
</layout>