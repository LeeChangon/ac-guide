<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.graphics.Color"/>
        <import type="android.view.View"/>
        <variable
            name="villager"
            type="com.ssafy.animal_crossing_nh_guide.models.villager.Villager" />
        <variable
            name="filepath"
            type="String" />
    </data>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="300dp"
        android:layout_height="420dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@{Color.parseColor(villager.bubble_color)}"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:strokeColor="@color/ac_pedia_background"
        app:strokeWidth="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_gravity="bottom"
            android:layout_width="300dp"
            android:layout_height="410dp"
            android:backgroundTintMode="src_in"
            android:backgroundTint="@{Color.parseColor(villager.text_color)}"
            android:background="@drawable/group_83">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toTopOf="@+id/name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:villagerUrl="@{filepath}" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:text="@{villager.name.name_KRko}"
                android:textColor="@color/ac_textcolor_dark"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:elevation="0dp"
                app:strokeWidth="0dp"
                android:layout_marginTop="7dp"
                android:layout_width="220dp"
                android:layout_height="2dp"
                app:cardBackgroundColor="@color/ac_textcolor_dark"
                app:cardCornerRadius="3dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/shine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_shine"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </com.google.android.material.card.MaterialCardView>
</FrameLayout>
</layout>