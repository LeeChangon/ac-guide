<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="time"
            type="String" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".mypage.MypageFragment"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@color/ac_pedia_background">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:strokeWidth="0dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/ac_background_bright">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginVertical="10dp"
                    android:padding="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/date_tv"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center"
                            android:text="@{time}"
                            tools:text=" 년 월 일 요일 시간"
                            android:textColor="@color/ac_textcolor_dark"
                            android:textSize="30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:id="@+id/date_config_btn"
                            android:layout_gravity="center"
                            android:src="@drawable/config_icon"
                            android:layout_marginRight="10dp"
                            android:layout_width="35dp"
                            android:layout_height="35dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/time_collapse_layout"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/change_confirm_btn"
                                android:layout_gravity="center"
                                android:text="확인"
                                android:layout_marginHorizontal="30dp"
                                android:layout_weight="1"
                                android:textSize="20sp"
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"/>
                            <Button
                                android:id="@+id/reset_date_btn"
                                android:text="초기화"
                                android:layout_marginHorizontal="30dp"
                                android:layout_weight="1"
                                android:textSize="20sp"
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <DatePicker
                                android:id="@+id/date_picker"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:calendarViewShown="false"
                                android:datePickerMode="spinner"
                                />
                            <TimePicker
                                android:id="@+id/time_picker"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:timePickerMode="spinner"
                                />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
<!--            내 주민 리스트-->

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:strokeWidth="0dp"
                    android:layout_marginVertical="15dp"
                    android:backgroundTint="@color/ac_background_bright"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="5dp"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="13dp">


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/my_villager_recyclerview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:nestedScrollingEnabled="false"
                                android:overScrollMode="never" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/my_add_villager_btn"
                                style="@style/Widget.Material3.Button.IconButton"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:fontFamily="@font/a_cindi_b"
                                android:text=" 내 마을 주민 추가하기"
                                android:textColor="@color/ac_textcolor_dark"
                                android:visibility="gone"
                                app:cornerRadius="5dp"
                                app:icon="@drawable/add_icon"
                                app:iconGravity="textStart"
                                app:iconTint="@color/ac_textcolor_dark"
                                app:rippleColor="@color/white" />

                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_marginStart="13dp"
                    app:cardCornerRadius="10dp"
                    app:strokeWidth="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp">
                        <TextView
                            android:id="@+id/my_villager_title"
                            android:layout_gravity="start"
                            android:text="마을 주민"
                            android:textColor="@color/ac_textcolor_dark"
                            android:textSize="20dp"
                            android:layout_marginHorizontal="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
            </FrameLayout>


<!--            잡은 곤충 리스트-->
            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:strokeWidth="0dp"
                    android:layout_marginVertical="15dp"
                    android:backgroundTint="@color/ac_background_bright"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="5dp"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingVertical="13dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <FrameLayout
                                    android:id="@+id/bug_caught_frame_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    >

                                    <ProgressBar
                                        android:id="@+id/bug_progressbar"
                                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                        android:progressDrawable="@drawable/progressbar_style"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        tools:progress="50"
                                        android:max="80"
                                        android:progress="0"
                                        />
                                    <LinearLayout
                                        android:id="@+id/bug_caught_draw_layout"
                                        android:visibility="gone"
                                        android:layout_marginHorizontal="10dp"
                                        android:layout_marginTop="40dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/my_bug_recyclerview"
                                            android:layout_marginBottom="40dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:nestedScrollingEnabled="false"
                                            android:overScrollMode="never"
                                            />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/bug_caught_head_layout"
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="30dp"
                                        android:paddingHorizontal="10dp"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:id="@+id/my_caught_bug_tv"
                                            android:text="곤충"
                                            android:layout_weight="1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                        <TextView
                                            android:id="@+id/my_caught_bug_progress_tv"
                                            android:text="0 / 80"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                    </LinearLayout>
                                </FrameLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="20dp"
                                    >
                                    <ProgressBar
                                        android:id="@+id/fish_progressbar"
                                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                        android:progressDrawable="@drawable/progressbar_style"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        tools:progress="50"
                                        android:max="80"
                                        android:progress="0"
                                        />
                                    <LinearLayout
                                        android:id="@+id/fish_caught_draw_layout"
                                        android:visibility="gone"
                                        android:layout_marginHorizontal="10dp"
                                        android:layout_marginTop="40dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/my_fish_recyclerview"
                                            android:layout_marginBottom="40dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:nestedScrollingEnabled="false"
                                            android:overScrollMode="never"
                                            />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/fish_caught_head_layout"
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="30dp"
                                        android:paddingHorizontal="10dp"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:id="@+id/my_caught_fish_tv"
                                            android:text="물고기"
                                            android:layout_weight="1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                        <TextView
                                            android:id="@+id/my_caught_fish_progress_tv"
                                            android:text="0 / 80"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                    </LinearLayout>
                                </FrameLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    >
                                    <ProgressBar
                                        android:id="@+id/sea_progressbar"
                                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                        android:progressDrawable="@drawable/progressbar_style"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        tools:progress="50"
                                        android:max="40"
                                        android:progress="0"
                                        />
                                    <LinearLayout
                                        android:id="@+id/sea_caught_draw_layout"
                                        android:visibility="gone"
                                        android:layout_marginHorizontal="10dp"
                                        android:layout_marginTop="40dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/my_sea_recyclerview"
                                            android:layout_marginBottom="40dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:nestedScrollingEnabled="false"
                                            android:overScrollMode="never"
                                            />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/sea_caught_head_layout"
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="30dp"
                                        android:paddingHorizontal="10dp"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:id="@+id/my_caught_sea_tv"
                                            android:text="해산물"
                                            android:layout_weight="1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                        <TextView
                                            android:id="@+id/my_caught_sea_progress_tv"
                                            android:text="0 / 40"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                    </LinearLayout>
                                </FrameLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_marginStart="13dp"
                    app:cardCornerRadius="10dp"
                    app:strokeWidth="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp">
                        <TextView
                            android:id="@+id/my_caught_title"
                            android:layout_gravity="start"
                            android:text="잡은 생물"
                            android:textColor="@color/ac_textcolor_dark"
                            android:textSize="20dp"
                            android:layout_marginHorizontal="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
            </FrameLayout>
            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:strokeWidth="0dp"
                    android:layout_marginVertical="15dp"
                    android:backgroundTint="@color/ac_background_bright"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="5dp"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingVertical="13dp">
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                app:strokeWidth="0dp"
                                android:layout_height="70dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/ac_button_color_enabled">
                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/my_alert_recyclerview"


                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>

                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_marginStart="13dp"
                    app:cardCornerRadius="10dp"
                    app:strokeWidth="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp">
                        <TextView
                            android:id="@+id/my_alert_title"
                            android:layout_gravity="start"
                            android:text="알림 설정한 생물"
                            android:textColor="@color/ac_textcolor_dark"
                            android:textSize="20dp"
                            android:layout_marginHorizontal="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </FrameLayout>
            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:strokeWidth="0dp"
                    android:layout_marginVertical="15dp"
                    android:backgroundTint="@color/ac_background_bright"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="5dp"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingVertical="13dp">
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                app:strokeWidth="0dp"
                                android:layout_height="70dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/ac_button_color_enabled">
                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/my_star_recyclerview"

                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>

                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_marginStart="13dp"
                    app:cardCornerRadius="10dp"
                    app:strokeWidth="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp">
                        <TextView
                            android:id="@+id/my_star_title"
                            android:layout_gravity="start"
                            android:text="즐겨찾기"
                            android:textColor="@color/ac_textcolor_dark"
                            android:textSize="20dp"
                            android:layout_marginHorizontal="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </FrameLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</layout>